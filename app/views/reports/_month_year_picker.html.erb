<% form_tag action, :method => 'get', :id => "#{action}_form" do %>
  <div>
    <table>
      <tr>
        <td><%= select_tag "month", options_from_collection_for_select( @customer_report.months, 'first', 'last', params[:month] ? params[:month].to_i : @customer_report.month  ) %></td>
        <td><%= select_tag "year", options_for_select(@customer_report.years, params[:year].to_i) %></td>
      <td><noscript><%= submit_tag "View" %></noscript></td>
    </table>
  </div>

  <%= (defined? hidden_fields) ? hidden_fields : '' %>
<% end -%>



<%= observe_form "#{action}_form",
      :url => {:action => "update_#{action}_content"},
      :update => "#{action}_content" %>